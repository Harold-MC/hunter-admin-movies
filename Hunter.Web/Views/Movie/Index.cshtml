@model Hunter.Web.Models.DTO.MovieGenreDto

@section cardmovie
{
    <link rel="stylesheet" href="~/Content/cardmovie.css">
}

<h1>Movies</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="container">

    <div>
        <label>Genre:</label>
        <select>
            @foreach (var option in Model.Genres)
            {
                <option values="@option.Id">@option.Name</option>
            }
        </select>
    </div>
    <div class="container">
        @foreach (var movie in Model.MovieDto)
        {
            <div class="movie-card">
                <div class="movie-header" style="background-image:url('https://cdn.pixabay.com/photo/2019/10/30/16/19/fox-4589927_1280.jpg')">
                    <div class="header-icon-container"></div>
                </div><!--movie-header-->
                <div class="movie-content">
                    <div class="movie-content-header">
                        <a href="#">
                            <h3 class="movie-title">@movie.Title</h3>
                        </a>
                        <div class="imax-logo"></div>
                    </div>
                    <div class="movie-info">
                        <div class="info-section">
                            <label>Release Date</label>
                            <span>@movie.ReleaseDate.ToLongDateString()</span>
                        </div><!--date,time-->
                        <div class="info-section">
                            <label>Genre</label>
                            <span>@movie.Name</span>
                        </div><!--screen-->
                        <div class="info-section">
                            <label>Row</label>
                            <span>D</span>
                        </div><!--row-->
                        <div class="info-section">
                            <label>Seat</label>
                            <span>05,06</span>
                        </div><!--seat-->
                    </div>
                </div><!--movie-content-->
            </div><!--movie-card-->
        }
    </div><!--container-->

</div>
